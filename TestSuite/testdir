#! /bin/sh

set errors=0

rm -f log
touch log

for f in Correct/*.tjp ; do
  echo "Running test $f" >> log
  ../../taskjuggler/taskjuggler $f 2>> log
  if [ $? -ne 0 ]; then
    errors=$(( $errors + 1 ))
    echo "Test $f failed!"
  fi
done
  
for f in Errors/*.tjp ; do
  echo "Running test $f" >> log
  ../../taskjuggler/taskjuggler $f 2>> log
  if [ $? -eq 0 ]; then
    errors=$(( $errors + 1 ))
    echo "Test $f failed!"
  fi
done

exit $errors

