task beta1 "SL 8.0 beta1" {

  task work "SL 8.0 finish all coding work" {
    length 5d
    depends !!pre4.work
  }

  task dl "SL 8.0 x86 deadline for beta 1 (1800 CET)" {
    depends !work
    flags deadline
  }

  task build "SL 8.0 x86 build beta 1" {
    length 2d
    depends !work
  }

  task ship "SL 8.0 x86 ship beta 1 to external testers" {
    length 2d
    depends !build
    maxStart 2002-02-06
  }

  task test "SL 8.0 x86 test beta 1" {
    length 2d
    depends !build
  }
